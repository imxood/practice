root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,cpp,h,hpp,yaml,html,css,js,json,jsx}]
indent_style = tab

[{CMakeLists.txt,*.cmake,Makefile}]
indent_style = tab

[*.yml]
indent_style = tab

[*.vue]
indent_style = tab

[*.md]
indent_style = unset
indent_size = 4
