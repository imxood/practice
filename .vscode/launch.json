{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"cwd": "${workspaceRoot}/embed/demo/stm32/stm32f103/oled_demo",
			"executable": "build/oled_demo.elf",
			"name": "Debug Microcontroller",
			"request": "launch",
			"type": "cortex-debug",
			"servertype": "stutil"
		},
		{
			"type": "gdb",
			"request": "launch",
			"name": "c++ examples",
			"target": "./c++/boost/out/test_websocket_client_async.exe",
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "parseText"
		},
		{
			"name": "Python: Current File",
			"cwd": "${workspaceRoot}/embed/demo/stm32/stm32f103/oled_demo",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "scons",
			"type": "python",
			"cwd": "${workspaceFolder}/tools/scons/examples",
			"request": "launch",
			"program": "${env:HOME}/.local/bin/scons",
			"console": "integratedTerminal",
			"justMyCode": false
		}
	]
}
